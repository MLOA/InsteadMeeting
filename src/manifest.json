{
  "name": "かわりミーティング",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "ループ動画を録画してzoomで流せるツール",
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.zoom.us/*"
      ],
      "js": [
        "index.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "main.js"
      ],
      "matches": [
        "https://*.zoom.us/*"
      ],
      "extension_ids": []
    }
  ],
  "permissions": [
    "tabs"
  ]
}